.calendar
	flex: 1 1 auto

	&-top
		padding: 0
		background-color: var(--mainColor)
		border-radius: 5px

		&__filter
			padding: 40px
			border-radius: 5px


	&-body-cont
		border: 1px solid var(--borderColor)
		border-right: 0 0 5px 5px

.calendar
	display: flex
	flex-direction: column

	&__title
		font-weight: 500
		font-size: rem(22)
		padding: 30px 30px 0 30px
		text-align: center
		color: #fff

	&-top

		&__filter
			display: flex 
			flex-direction: column

		&__link
			margin-top: 20px
			text-align: center



	&__day
		display: flex
		justify-content: space-around

	&-filter
		display: flex
		justify-content: space-between

		&__select
			flex: 1 1 auto

			.selectize-dropdown-content
				max-height: 200px
				overflow-y: auto

			&:not(:first-child)
				margin-left: 20px
				max-width: 130px

			select
				width: 100%
				height: 45px
				border: 0
				border-radius: 5px
				padding: 0 35px 0 25px
				background-image: url('../img/ico-arrow-black.svg')
				background-color: #fff
				background-position: center right 20px
				background-repeat: no-repeat
				flex: none

			input 
				display: none !important

			.item
				width: 100%
				height: 100%
				padding: 12px 45px 12px 25px
				background-repeat: no-repeat
				border-radius: 5px
				line-height: 1

			.option
				padding: 12px 45px 12px 25px

			.selectize-input
				padding: 0 !important
				border-radius: 5px !important
				border: 0 !important
				background: #fff !important
				box-shadow: none !important

		&__item
			&:not(:first-child)
				margin-left: 40px

	&-body
		display: table
		width: 100%

		&__padding
			padding: 22px 20px
			background: #fff

		&-cont
			background: #fff
			margin: 1px
			padding: 25px 35px
			margin-top: -2px

			&__title
				text-align: center
				padding: 0 10px 10px

	&-row
		display: flex
		justify-content: space-between

		a 
			&:hover 
				cursor: pointer

	&__cell
		size: 43px
		text-align: center
		vertical-align: middle
		color: #9BAABB
		font-weight: 400
		line-height: 45px

		&--another
			color: #CAD4DF

		&--link
			color: #000
			transition: color .5s ease, background .5s ease
			font-weight: 400
			border-radius: 50%
			font-weight: 500

			&.active
				background: var(--secondColor)
				color: #fff

			&:hover
				color: var(--mainColor)
				background: #e9eff4

		&--selected
			color: var(--mainColor)
			color: #fff !important
			background: #e9eff4
			background: var(--mainColor)


@media screen and (max-width: 1200px)

	.content-main 
		.calendar-body-cont
			padding: 20px

	.calendar__title
		padding: 20px 20px 0

	.calendar-top__filter
		padding: 20px

	.calendar-events__el-info
		max-width: 545px

@media screen and (max-width: 1000px)

	.calendar-filter__select
		select 
			border: 0
			height: 45px
			padding: 0 20px
			width: 100%

@media screen and (max-width: 667px)


	.calendar
		&-filter
			margin: 0
			flex-direction: column

			&__select
				width: calc((100% - 20px * 2) / 2)
				margin: 0 0 0 20px

			&__item
				width: 100%
				margin: 0 0 15px 0 !important

				.calendar-filter__select
					margin: 0 !important


		&-top

			&__link
				text-align: center

		&-body-cont
			padding: 25px 10px


	.content-main 
		.calendar
			&-top
				flex-direction: column

			&__title
				margin: 0 0 15px 0




@media screen and (max-width: 370px)
	
	.calendar__cell
		width: 38px
		height: 38px
		line-height: 40px
