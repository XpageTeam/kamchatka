@media screen and (max-width: 1300px)
	
	.accordion
		&__item
			&-arrow
				width: 44px
				height: 44px

			&-top
				line-height: 1.4

@media screen and (max-width: 667px)

	.accordion
		&__item
			&-top
				padding: 20px
				font-size: 1rem

			&-bot
				padding: 20px
